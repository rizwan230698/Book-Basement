<div class="container" id="main">
  {{#each data}}
  <div class="content">
    <div class="bookDiv">
      <div id="bookImage"><img src={{this.image}} alt="Book Image" /></div>
      <div id="book-details">
        <h1 id="bookTitle">{{this.title}}</h1>
        <h4 id="bookAuthor"><span class="heading">Author : </span>{{this.author}}</h4>
        <p>Price {{this.price}}</p>
        <p id="bookDescription">{{this.description}}</p>
        <p id="EMAIL" style="display: none">{{this.email}}</p>
      </div>
    </div>
    <div id="action-btn">
      <a href="/profile/delete/{{this._id}}" class="btn btn-danger deleteBookButton">Delete</a>
      <button class="btn btn-danger editBookButton">Edit</button>
    </div>
  </div>


  <div class="formDiv">
    <form id="deleteForm" action="/profile/edit/{{this._id}}" method="POST">
      <div class="form-group row">
        <div class="col-12">
          <input type="text" name="title" class="form-control bookTiltle" placeholder="Book Title" required autoComplete="off" />
        </div>
      </div>
      <div class="form-group row">
        <div class="col-12">
          <input type="text" name="author" class="form-control bookAuthor" placeholder="Book Author" required autoComplete="off" />
        </div>
      </div>
      <div class="form-group row">
        <div class="col-12">
          <input type="text" name="description" class="form-control bookDescription" placeholder="Book Description"
            required autoComplete="off" />
        </div>
      </div>
      <div class="form-group row">

        <div class="col-12">
          <input type="number" name="price" class="form-control bookPrice" placeholder="Book Price" required autoComplete="off" />
        </div>
      </div>
      <div class="form-btn">
        <button type="submit" class="btn btn-danger formEditButton">Update</button>
        <button class="btn btn-danger formCanceltButton">Cancel</button>
      </div>

    </form>
  </div>
  {{/each}}
</div>